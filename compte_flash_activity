package com.example.testyourandroidsmartphone;

import android.content.Intent;
import android.support.v7.app.AppCompatActivity;
import android.os.Bundle;
import android.view.View;
import android.widget.Button;
import android.widget.Toast;

public class Compte_Flash_Activity extends AppCompatActivity {
    Button un;
    Button deux;
    Button trois;
    Button quatre;
    Button cinq;
    Button six;
    Button sept;
    Button huit;
    Button neuf;
    Button tryagain;


    @Override
    protected void onCreate(Bundle savedInstanceState) {
        super.onCreate(savedInstanceState);
        setContentView(R.layout.activity_compte_flash);
        un=findViewById(R.id.button);
        deux=findViewById(R.id.button2);
        trois=findViewById(R.id.button3);
        quatre=findViewById(R.id.button4);
        cinq=findViewById(R.id.button5);
        six=findViewById(R.id.button6);
        sept=findViewById(R.id.button7);
        huit=findViewById(R.id.button8);
        neuf=findViewById(R.id.button9);
        tryagain=findViewById(R.id.button10);
        cinq.setOnClickListener(new  View.OnClickListener() {
            @Override
            public void onClick(View view) {
                Toast.makeText(Compte_Flash_Activity.this, "Le flash de votre smartphone fonctionne correctement !!", Toast.LENGTH_SHORT).show();
            }
        });
        un.setOnClickListener(new  View.OnClickListener() {
            @Override
            public void onClick(View view) {
                Toast.makeText(Compte_Flash_Activity.this, "Oups !! Veuillez refaire le compte ", Toast.LENGTH_SHORT).show();
            }
        });
        deux.setOnClickListener(new  View.OnClickListener() {
            @Override
            public void onClick(View view) {
                Toast.makeText(Compte_Flash_Activity.this, "Oups !! Veuillez refaire le compte ", Toast.LENGTH_SHORT).show();
            }
        });
        trois.setOnClickListener(new  View.OnClickListener() {
            @Override
            public void onClick(View view) {
                Toast.makeText(Compte_Flash_Activity.this, "Oups !! Veuillez refaire le compte ", Toast.LENGTH_SHORT).show();
            }
        });
        quatre.setOnClickListener(new  View.OnClickListener() {
            @Override
            public void onClick(View view) {
                Toast.makeText(Compte_Flash_Activity.this, "Oups !! Veuillez refaire le compte ", Toast.LENGTH_SHORT).show();
            }
        });
        six.setOnClickListener(new  View.OnClickListener() {
            @Override
            public void onClick(View view) {
                Toast.makeText(Compte_Flash_Activity.this, "Oups !! Veuillez refaire le compte ", Toast.LENGTH_SHORT).show();
            }
        });
        sept.setOnClickListener(new  View.OnClickListener() {
            @Override
            public void onClick(View view) {
                Toast.makeText(Compte_Flash_Activity.this, "Oups !! Veuillez refaire le compte ", Toast.LENGTH_SHORT).show();
            }
        });
        huit.setOnClickListener(new  View.OnClickListener() {
            @Override
            public void onClick(View view) {
                Toast.makeText(Compte_Flash_Activity.this, "Oups !! Veuillez refaire le compte ", Toast.LENGTH_SHORT).show();
            }
        });
        neuf.setOnClickListener(new  View.OnClickListener() {
            @Override
            public void onClick(View view) {
                Toast.makeText(Compte_Flash_Activity.this, "Oups !! Veuillez refaire le compte ", Toast.LENGTH_SHORT).show();
            }
        });
        tryagain.setOnClickListener(new View.OnClickListener() {
            public void onClick(View view) {
                Intent intent = new Intent(Compte_Flash_Activity.this, com.example.testyourandroidsmartphone.Check_Flash_Activity.class);
                startActivityForResult(intent, 1);
            }
        });






    }
}
